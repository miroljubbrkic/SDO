<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todoCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/todoCheckBox"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_dark_navy"
        android:buttonTint="#d3d3d3"
        android:padding="15dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/todoEditBtn"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_navy"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="@+id/todoCheckBox"
        app:layout_constraintEnd_toStartOf="@+id/todoDeleteBtn"
        app:layout_constraintTop_toTopOf="@+id/todoCheckBox" />

    <ImageButton
        android:id="@+id/todoDeleteBtn"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_navy"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/todoCheckBox"
        app:layout_constraintEnd_toEndOf="@+id/todoCheckBox"
        app:layout_constraintTop_toTopOf="@+id/todoCheckBox" />

</androidx.constraintlayout.widget.ConstraintLayout>